<div class="container">
<div class="row">
<h2>User info</h2>



	<%= form_for (@user) do |f| %>
	<div><%= f.label :Name %>
		<%= f.text_field :name %>
		<br>
	</div><br>
	<%= f.label :profile_image %><br>
	<%= f.attachment_field :profile_image %>
	<br>
	<%= f.label :introduction %>
	<%= f.text_area :introduction %>
	<br>
	  <%= f.submit "Update User" %>
	  <% end %>
</div>
</div>