<body>
	<main>
		<div class="container">
			<div class="row">

				<%= render 'partial/list',user: @user,book: @booknew %>



				<div class="col-xs-9">
					<h2>Books</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Option</th>
								<th colspan="3"></th>
							</tr>
						</thead>
						<tbody>
							<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image , size: "50x50", format: 'jpeg', fallback:"noimage.jpeg" %></td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</main>




</body>