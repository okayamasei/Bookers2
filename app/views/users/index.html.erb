<body>

	<main>
		<div class="container">
			<div class="row">
				<%= render 'partial/list',user: @user,book: @booknew %>
				<div class="col-xs-9">
					<h2>Users</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
								<th colspan="1"></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
								<tr>
									<td><%= attachment_image_tag @user, :profile_image , size: "50x50", format: 'jpeg', fallback:"noimage.jpeg" %></td>
									<td><%= user.name %></td>
									<td><%= link_to "Show", user_path(user) %></td>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</main>

</body>