<body>


	<main>
		<div class="container">
			<div class="row">
				<%= render 'partial/list',user: @user,book: @booknew %>

				<div class="col-xs-9">
					<h2>Book detail</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th colspan="6"></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><%= link_to user_path(@user) do %>
									<%= attachment_image_tag @user, :profile_image , size: "50x50", format: 'jpeg', fallback:"noimage.jpeg" %><br>
									<%= @user.name %>
									<% end %>
								</td>
								<td><%= @book.title %></td>
								<td><%= @book.body %></td>
								<% if @user == current_user %>
									<td><%= link_to "Edit", edit_book_path, class: 'btn-sm btn-success' %>
									</td>
									<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are You Sureï¼Ÿ", class: 'btn-sm btn-danger' %></td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</div>

			</div>
		</div>
	</main>
</body>